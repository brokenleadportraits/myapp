
<div class="row">
    <hr>
    <p><h1>Your Review</h1></p>
    <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> |
    <% if signed_in? && current_user.admin? %>
        <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'This will delete your comment. Are you sure? There is no going back.' } %></p>
    <% end %>
    <!-- <p><%#= "Rating: #{comment.rating}/5" %></p> -->
    <div class="rated" data-score="<%= comment.rating %>"></div>
    <p></p>
    <p><%= comment.body %></p>
</div>

