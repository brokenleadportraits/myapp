
<div class="container-fluid" id=comments-descripton>
  <div class="row" id="comments-row">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <p>
        <%= image_tag(@product.image_url) %>
      </p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
      	<strong>Color:</strong>
      	<%= @product.color %>
      </p>
      <p>
      	<strong>Price:</strong>
      	$<%= @product.price %>
      </p>
      <% if signed_in? && current_user.admin? %>
        <p><%= link_to 'Edit', edit_product_path(@product) %></p>
      <% end %>
        <p><%= link_to '| Back |', products_path %></p>

    </div>
    <div class="col-md-3">
      <div class="comments">
        <%= render 'comments' %>
      <div class="digg_pagination">
        <%= will_paginate @comments %>
        <%#= will_paginate @comments, :page_links => false %>
      </div>
        <%= render 'new_comment' %>
      </div>
    <div class="col-md-3">
  </div>
  <p id="notice"><%= notice %></p>
</div>
</div>
</div>
 


